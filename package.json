  "engines": {
    "node": "^6.14.0 || ^8.10.0 || >=9.10.0"
  },
  "dependencies": {
    "lodash-core": "^4.17.11"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.120",
    "@types/node": "^11.9.2",
    "ava": "^1.2.1",
    "eslint": "^5.14.0",
    "js-yaml": "^3.12.1",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3"
  },
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
